<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="@color/background_material_light"
                android:centerColor="@color/background_material_light"
                android:centerY="1.0"
                android:endColor="@color/background_material_light" />
        <corners
            android:radius="30dp"/>
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="@color/primary_text_material_dark"
                android:centerColor="@color/button_color"
                android:centerY="1.0"
                android:endColor="@color/highlight_color_filter" />
            <corners
                android:radius="30dp"/>
        </shape>
    </clip>
    </item>
</layer-list> 