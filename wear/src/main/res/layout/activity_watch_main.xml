<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".WatchMainActivity"
    tools:deviceIds="wear">

    <android.support.constraint.ConstraintLayout
        android:id = "@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageViewMain"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:cropToPadding="false"
            android:src="@mipmap/logo_just_dance_now"
            app:layout_constraintBottom_toTopOf="@+id/textViewMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewMain"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Let's dance!"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewMain" />

        <Button
            android:id="@+id/buttonSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="148dp"
            android:layout_marginBottom="22dp"
            android:text="Button Sensor"
            app:layout_constraintBottom_toTopOf="@+id/textViewMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewMain"
            android:onClick="ButtonSensorCallback"/>

    </android.support.constraint.ConstraintLayout>
</android.support.wear.widget.BoxInsetLayout>