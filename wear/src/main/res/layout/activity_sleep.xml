<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".SleepActivity"
    tools:deviceIds="wear"
    tools:ignore="MissingDefaultResource">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageSleepMode"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:cropToPadding="false"
            android:src="@mipmap/sleep_mode"
            app:layout_constraintBottom_toTopOf="textSleepMode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textSleepMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleeping Mode"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="imageSleepMode" />
    </android.support.constraint.ConstraintLayout>

</android.support.wear.widget.BoxInsetLayout>